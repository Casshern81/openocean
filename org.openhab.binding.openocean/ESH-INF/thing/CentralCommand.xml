<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="openocean"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">
        
        <thing-type id="switchingActuator">
            <supported-bridge-type-refs>
                <bridge-type-ref id="bridge" />
            </supported-bridge-type-refs>
            
            <label>Switching actuator</label>
            <description>Switching is done by EEP command A5-38-08 type 0x01</description>
            
             <channels>
                <channel typeId="switch" id="switch"></channel>
            </channels>
            
            <config-description>
                <parameter name="channel" type="integer" min="1" max="128">
                    <label>Channel</label>
                    <description>Each channel represents an individual thing, channel is used to create an unique Id</description>
                    <required>true</required>
                </parameter>
                <parameter name="senderId" type="text">
                    <label>Sender Id</label>
                    <description>Id is used to identify messages send by thing (4 byte hex string)</description>
                    <required>true</required>
                </parameter>
                <parameter name="offsetId" type="integer" min="1" max="128">
                    <label>Id offset</label>
                    <description>Offset is added to base id of bridge to send messages to thing. If not specified the next free offset will be determined by bridge</description>
                </parameter>
                <parameter name="manufacturerId" type="text">
                    <label>Manufacturer Id</label>
                    <description>Id is used for 4BS teach in with EEP</description>
                </parameter>
                <parameter name="teachInType" type="text">
                    <label>Teach in type</label>
                    <description>Type of 4BS teach in message</description>
                    <options>
                        <option value="uniWoEEP">unidirectional without EEP</option>
                        <option value="uniWEEP">unidirectional with EEP</option>
                        <option value="biWoEEP">bidirectional without EEP</option>
                        <option value="biWEEP">bidirectional with EEP</option>
                    </options>
                    <limitToOptions>true</limitToOptions>
                </parameter>
            </config-description>
            
        </thing-type>
        
</thing:thing-descriptions>